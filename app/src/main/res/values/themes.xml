<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Mafraq" parent="android:Theme.Material.NoActionBar"  >
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Theme.Mafraq</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>
